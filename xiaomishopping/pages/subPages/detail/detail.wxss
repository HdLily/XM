/* pages/subPages/detail/detail.wxss */
.container {
    background-color: #ebebeb;
}
.swiper-wrapper {
    width: 100%;
    height: 820rpx;
}
.swiper-slide {
    width: inherit;
    height: inherit;
}
.swiper-image {
    width: inherit;
    height: inherit;
}
/* 信息区 */
.overview {
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    flex-direction: column;
    -ms-flex-direction: column;
    text-align: left;
    margin-bottom: 16rpx;
    background-color: #fff;
    padding: 20rpx 32rpx 0;
}
.goods-name {
    font-size: 32rpx;
    line-height: 44rpx;

}
.goods-desc {
    font-size: 26rpx;
    color: rgba(0, 0, 0, .54);
    line-height: 40rpx;

}
.goods-price-wrap {
    line-height: 60rpx;
    height: 60rpx;
}
.goods-price {
    position: relative;
    color: #ff6700;
    font-size: 40rpx;
}
.goods-price:after {
    content: '';
    font-size: 36rpx;
    position: absolute;
    right: -42rpx;
    top: 50%;
    transform: translateY(-50%);
}
.product-box {
    margin-bottom: 16rpx;
}
/* 留言区 */
.comment-view {
    text-align: left;
    background-color: #fff;

}
.comment-info {
    margin: 0 30rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 2px solid #f3f3f3;
}
.box-flex {
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
}
.box-flex view, .box-flex text {
    -webkit-box-flex: 1;
    -webkit-flex: 1 1 auto;
    flex: 1 1 auto;
}
.comment-count {
    font-size: 30rpx;
}
.comment-degree {
    text-align: right;
    font-size: 26rpx;
    color: #a4a4a4;
}
.comment-reply {
    margin-bottom: 16rpx;
}
/* 描述区 */
.description-view {
    width: 100%;
}
.tab-header {
    height: 90rpx;
    line-height: 90rpx;
    width: 100%;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
}
.tab-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1 0 auto;
  flex: 1 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}
.cur {
    color: #ff6700;
    border-bottom: 6rpx solid #ff6700;
}
.tab-item .flex {
    font-size: 30rpx;
}
.tab-view {
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    flex-direction: column;
    -ms-flex-direction: column;
    
}
.tab-view-item {
    width: 100%;
}
.tab-img {
    width: inherit;
    height: inherit;
}
/* 底部区域 */
.fixed-footer {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
}
.btn-cart {
    width: 100rpx;
    height: 100rpx;
    background-color: #fff;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
}
.btn-cart-img {
    width: 50rpx;
    height: 50rpx;
}
.btn-buy {
    width: 330rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    background-color: #ff6700;
}
.btn-buy-now {
    -webkit-box-flex: 1;
    -webkit-flex: 1 0 auto;
    flex: 1 0 auto;
    height: 100rpx;
    background-color: #ea5f39;
    text-align: center;
    line-height: 100rpx;
}
.footer-text {
    font-size: 34rpx;
    color: #ffffff;
}