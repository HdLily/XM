/* pages/detail/detail.wxss */
.container {
  background-color: #ebebeb;
}
.swiper-wrapper {
  width: 100%;
  height: 820rpx;
  
}
.swiper-silde {
  width: inherit;
  height: inherit;
}
.swiper-image {
  width: inherit;
  height: inherit;
}
/*信息区  */
.overview {
  text-align: left;
  background-color: #fff;
  padding: 20rpx 32rpx 0;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -ms-flex-direction: column;
  flex-direction: column;
   margin-bottom: 16rpx;
}
.goods-name {
  font-size: 32rpx;
  line-height: 44rpx;
}
.goods-desc {
  font-size: 26rpx;
  color: rgba(0,0,0,.54);
  line-height: 40rpx;
}
.goods-price-wrap {
  line-height: 60rpx;
  height: 60rpx;
}
.goods-price {
  position: relative;
  color: #ff6700;
  font-size: 40rpx;
}
.goods-price::after {
  content: "元";
  font-size: 36rpx;
  position: absolute;
  right: -42rpx;
  top: 50%;
  transform: translateY(-50%);
}
.product-box {
  margin-bottom: 16rpx;
}
/*留言区  */
.comment-view {
  text-align: left;
  background-color: #fff;
}
.comment-info {
  margin: 0 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #f3f3f3;
}
.box-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.box-flex view, .box-flex text {
    -webkit-box-flex: 1;
    -webkit-flex: 1 1 auto;
    flex: 1 1 auto;
}

.comment-count {
  font-size: 30rpx;
}
.comment-degree {
  text-align: right;
  font-size: 26rpx;
  color: #a4a4a4;
}
.comment-reply {
  margin-bottom: 16rpx;
}

/*描述区  */
.description-view {
  width: 100%;
}
.tab-header {
  height: 90rpx;
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  line-height: 90rpx;
}
.tab-item {
  -webkit-box-flex: 1;
  -webkit-flex: 1 0 auto;
  flex: 1 0 auto;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
}
.cur {
  color: #ff6700;
  border-bottom: 6rpx solid #ff6700;
}
.tab-item .flex {
  font-size: 30rpx;
}
.tab-view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -ms-flex-direction: column;
  flex-direction: column;
}
.tab-view-item {
  width: 100%;
}
.tab-img {
  width: inherit;
  height: inherit;
}
/*底部区域  */
.fixed-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  height: 100rpx;
  width: 100%;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.btn-cart {
  width: 100rpx;
  height: 100rpx;
  background-color: #fff;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btn-cart-img {
  width: 50rpx;
  height: 50rpx;
}
.btn-buy {
  height: 100rpx;
  width: 330rpx;
  background-color: #ff6700;
  text-align: center;
  line-height: 100rpx;
}
.btn-buy-now {
  -webkit-box-flex: 1;
  -webkit-flex: 1 0 auto;
  flex: 1 0 auto;
  height: 100rpx;
  background-color: #ea5f39;
  text-align: center;
  line-height: 100rpx;
}
.footer-text {
  color: #fff;
  font-size: 34rpx;
}