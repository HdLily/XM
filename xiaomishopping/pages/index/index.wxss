/* pages/index/index.wxss */
/* 首页样式 */
.container {
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    flex-direction: column;
    margin: 0;
    padding: 0;
}
.section {
    width: 100%;
}
/* 搜索框 */

.searchBox {
    position: relative;
    left: 0;
    top: 0;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    flex-direction: column;
    align-items: center;
    justify-content: center; 
    height: 80rpx;
    background-color: #ff6700;
    line-height: 100rpx;

}

.search-outer {
    position: relative;
    left: 0;
    top: 0;
    width: 90%;
    height: 50rpx;
    border-radius: 50rpx;
    background-color: white;
    font-size: 26rpx;
    color: #666666;
}
 
/* 鼠标点击 */
.bind-search-area {
    background-color: #ececec;
}

.searchBox .search-inner {
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    -o-transform: translate(-50%, -50%);
}

/* 搜索图标 */
.searchBox .search-inner .icon-search {
    width: 50rpx;
    height: 50rpx;
}

/* 轮播图区 */
.section-banner {
    width: 100%;
    height: 380rpx;
    background-color: #ececec;
}

.banner-outer .banner-inner {
    width: 100%;
    /* 从父元素继承height属性 */
    height: inherit;
    background-color: papayawhip;
}

.banner-images {
    width: 100%;
    height: inherit;
    border: 0;
}

/* 列表导航区域 */

.section-cells {
    height: 160rpx;

}
.cells-list {
    width: 100%;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
}

.cells-item {
    flex: 1;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex-direction: column;
    align-items: center;

}
.item-images {
    width: 80rpx;
    height: 80rpx;
    margin: 16rpx 0 2rpx 0;
}
.item-text {
    font-size: 26rpx;
    color: #999999;

}

/* 活动区域 */
.section-main {
    width: 100%;
    height: 260rpx;
    padding: 14rpx 0;
    background-color: #ececec;
}

.main-list {
    height: inherit;
    width: 100%;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    justify-content: space-between;
    flex-direction: row;

}

.main-item {
    flex: 1;
    padding-left: 10rpx;
    -webkit-box-flex: 1;
    -webkit-flex: 1;

}
.main-item:first-child {
    padding-left: 0;
}
.main-item .main-image {
    width: 100%;
    height: 280rpx;
}
/* 记载中 */
.loading-wrap {
    height: 100vh;
    width: 100vw;
    background-color: #ececec;
}

.loading-inner {
    width: 100vw;
    height: 60rpx;
    display: flex;
    display: -webkit-box;
    display: -webkit-flex;
    justify-content: center;
    align-items: center;
    margin-top: 10rpx;
}
.loading-img {
  width: 60rpx;
  height: 60rpx;
  background-color: white;
  border-radius: 50rpx;

}
.loading-title {
  background-color: #ececec;
  font-size: 28rpx;
  color: #666;
}
.loading-title::after {
  border: none;
}
.section.section-box {
    box-sizing: border-box;
    height: 100%;
    position: relative;
}
.cate-banner {
    width: 100%;
    margin-bottom: 10rpx;
}
.cate-banner image {
    width: 100%;
}
.product {
    width: 100%;
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    display: inline-block;
}
.product-list {
    
    display: inline-block;
    text-align: center;
    width: 373rpx;
    margin-left: 6rpx;
    margin-bottom: 20rpx;
}
.product-list:nth-child(2n-1) {
    margin-left: 0;
}
.product-list image {
    width: 100%;
    height: 200rpx;
    box-sizing: border-box;

}
.product_name {
    color: #000;
    font-size: 30rpx;
    text-align: center;
}
.product_desc {
    color: gray;
    font-size: 20rpx;
    text-align: center;
}
.price {
    display: flex;
    flex-direction: row;
    justify-content: center;
}
.product_price {
    color: #F73815;
    font-size: 30rpx;
    text-align: center;
}
.product_lprice {
    color: gray;
    font-size: 20rpx;
    text-decoration: line-through;
    display: flex;
    align-items: center;
    margin-left: 10rpx;

}